@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Sections.cshtml";
}

@section PageHeader 
{
	<div class="homepage-header">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="homepage-banner">
						<h1>@Umbraco.Field("title")</h1>
						@Umbraco.Field("bodyText")
					</div>
				</div>
			</div>
		</div>
	</div>
}

<div class="homepage-links">
    @Umbraco.RenderMacro("SectionLinkBlock", new { mainCount = 6, mainName = "" })
</div>
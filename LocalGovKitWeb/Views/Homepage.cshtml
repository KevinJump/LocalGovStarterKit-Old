@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Sections.cshtml";
}

@section PageHeader 
{
	<div class="homepage-header">
		<div class="container">
			<div class="row">
				<div class="col-md-7">
					<div class="homepage-banner">
						<h1>@Umbraco.Field("title")</h1>
						@Umbraco.Field("bodyText")
					</div>
				</div>
				<div class="col-md-4 col-md-offset-1">
					<div class="site-highlights hidden-sm hidden-xs">
						<!-- yes this hardwired - but you can fix that, cant you? -->
						<h2>Getting started</h2>
						<ul>
							<li><a href="/help/">Starter kit help</a></li>
							<li><a href="/example/libraries/">Libraries</a></li>
							<li><a href="/Contact-us/">Contact</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
}
			
<div class="homepage-links">
    @Umbraco.RenderMacro("SectionLinkBlock", new { mainCount = 6, mainName = "" })
</div>
	
<div class="row featured">
	<div class="col-md-6">
        @Umbraco.RenderMacro("HomepageNews")
	</div>

	<div class="col-md-6">
		@Umbraco.RenderMacro("HomepageEvents")
	</div>
</div>

@section Footer { }

@section Scripts { } 